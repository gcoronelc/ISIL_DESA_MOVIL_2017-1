<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.egcc.proyectosalvador.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Número 1" />

    <EditText
        android:id="@+id/etAct1Num1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etAct1Num1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Número 2" />

    <EditText
        android:id="@+id/etAct1Num2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btnAct1Enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etAct1Num2"
        android:layout_marginStart="11dp"
        android:onClick="onClickEnviar"
        android:text="Enviar" />

    <Button
        android:id="@+id/btnAct1Salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etAct1Num2"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/btnAct1Enviar"
        android:text="Salir" />
</RelativeLayout>
